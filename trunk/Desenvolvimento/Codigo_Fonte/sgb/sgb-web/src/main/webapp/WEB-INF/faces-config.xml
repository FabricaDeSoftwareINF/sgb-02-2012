<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <navigation-rule>
        
        <!--  Estória de Usuário 13: Manter Editora-->
        <navigation-case>
            
            <from-outcome>EditoraController/initialPage</from-outcome>
            
            <to-view-id>/paginas/editora/manterEditora.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>EditoraController/editPage</from-outcome>
            
            <to-view-id>/paginas/editora/editarEditora.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>EditoraController/insertPage</from-outcome>
            
            <to-view-id>/paginas/editora/inclusaoEditora.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            <from-outcome>EditoraController/searchPage</from-outcome>
            
            <to-view-id>/paginas/editora/manterEditora.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- ESTÓRIA DE USUÁRIO 02-->
        
        <navigation-case>
            
            <from-outcome>LivroController/searchPage</from-outcome>
            
            <to-view-id>/paginas/livro/visualizacao.xhtml</to-view-id>
                        
        </navigation-case>
        
        <navigation-case>
      
            <from-outcome>LivroController/initialPage</from-outcome>
            
            <to-view-id>/paginas/livro/inicial.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>LivroController/editPage</from-outcome>
            
            <to-view-id>/paginas/livro/edicao.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- ESTÓRIA DE USUÁRIO 03-->
        
        <navigation-case>
            
            <from-outcome>UsuarioController/initialPage</from-outcome>
            
            <to-view-id>/paginas/usuario/inicial.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>UsuarioController/insertPage</from-outcome>
            
            <to-view-id>/paginas/usuario/inclusao.xhtml</to-view-id>
            
        </navigation-case>
       
        <navigation-case>
         
            <from-outcome>UsuarioController/recuperarSenha</from-outcome>
       
            <to-view-id>/recuperar-senha.xhtml</to-view-id>
     
        </navigation-case>  
        
        <navigation-case>
            
            <from-outcome>UsuarioController/editPage</from-outcome>
            
            <to-view-id>/paginas/usuario/edicao.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>UsuarioController/viewPage</from-outcome>
            
            <to-view-id>/paginas/usuario/visualizacao.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- ESTÓRIA DE USUÁRIO 05-->
        <navigation-case>
            
            <from-outcome>DisciplinaController/initialPage</from-outcome>
            
            <to-view-id>/paginas/disciplina/inicial.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>DisciplinaController/insertPage</from-outcome>
            
            <to-view-id>/paginas/disciplina/inclusao.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>DisciplinaController/editPage</from-outcome>
            
            <to-view-id>/paginas/disciplina/inclusao.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- ESTÓRIA DE USUÁRIO 03-->
        <navigation-case>
            
            <from-outcome>CursoController/insertPage</from-outcome>
            
            <to-view-id>/paginas/curso/incluirCurso.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>CursoController/searchPage</from-outcome>
            
            <to-view-id>/paginas/curso/manterCurso.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>CursoController/editPage</from-outcome>
            
            <to-view-id>/paginas/curso/editarCurso.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>LivroController/insertPage</from-outcome>
            
            <to-view-id>/paginas/livro/inclusao.xhtml</to-view-id>
            
        </navigation-case>

        <navigation-case>
            
            <from-outcome>ParametrosController/viewPage</from-outcome>
            
            <to-view-id>/paginas/parametros/show.xhtml</to-view-id>

        </navigation-case>
        
        <!-- ESTÓRIA 15: Lista de Cotação --> 
        
        <navigation-case>
            
            <from-outcome>ListaCotacaoController/initialPage</from-outcome>
            
            <to-view-id>/paginas/lista_cotacao/inicial.xhtml</to-view-id>
            
        </navigation-case> 
        
        <navigation-case>
            
            <from-outcome>ListaCotacaoController/viewPage</from-outcome>
            
            <to-view-id>/paginas/lista_cotacao/visualizacao.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- Estória 09: Manter Lista de Compras -->
        <navigation-case>
            
            <from-outcome>ListaComprasController/initialPage</from-outcome>
            
            <to-view-id>/paginas/listaCompras/inicial.xhtml</to-view-id>
        
        </navigation-case>
        
        <!-- ESTÓRIA 12: Manter Autor  -->
        <navigation-case>
            
            <from-outcome>AutorController/initialPage</from-outcome>
            
            <to-view-id>/paginas/autor/inicial.xhtml</to-view-id>
        
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>AutorController/insertPage</from-outcome>
            
            <to-view-id>/paginas/autor/cadastroAutor.xhtml</to-view-id>
        
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>AutorController/editPage</from-outcome>
            
            <to-view-id>/paginas/autor/editarAutor.xhtml</to-view-id>
        
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>LivroParaCotacaoController/initialPage</from-outcome>
                
            <to-view-id>/paginas/cotacao/busca.xhtml</to-view-id>
            
        </navigation-case>
        
        <!-- ESTÓRIA 18: Integração com Sophia - BC -->
        <navigation-case>
            
            <from-outcome>BibliotecaConfigController/initialPage</from-outcome>
            
            <to-view-id>/paginas/parametros/biblioteca.xhtml</to-view-id>
            
        </navigation-case>
        
        <navigation-case>
            
            <from-outcome>ComunicacaoController/initialPage</from-outcome>
            
            <to-view-id>/paginas/parametros/comunicacao.xhtml</to-view-id>
            
        </navigation-case>
        
    </navigation-rule>
    
    <converter>
    
        <converter-for-class>java.lang.Enum</converter-for-class>
            
        <converter-class>javax.faces.convert.EnumConverter</converter-class>
        
    </converter>

    <application>
    
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        
        <locale-config>
            
            <default-locale>pt_BR</default-locale>
            
        </locale-config>
    
        <resource-bundle>
            
            <base-name>resources.messages</base-name>
            
            <var>msg</var>
                
        </resource-bundle>
        
    </application>
    
</faces-config>
