<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

    <navigation-rule>
        <navigation-case>
            <from-outcome>UsuarioController/insertPage</from-outcome>
            <to-view-id>/cadastro/usuario/inclusao.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>UsuarioController/searchPage</from-outcome>
            <to-view-id>/cadastro/usuario/busca.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>UsuarioController/editPage</from-outcome>
            <to-view-id>/cadastro/usuario/edicao.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>UsuarioController/viewPage</from-outcome>
            <to-view-id>/cadastro/usuario/visualizacao.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>DisciplinaController/insertPage</from-outcome>
            <to-view-id>/cadastro/disciplina/inclusao.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>DisciplinaController/searchPage</from-outcome>
            <to-view-id>/cadastro/disciplina/busca.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>CursoController/insertPage</from-outcome>
            <to-view-id>/cadastro/curso/inclusaoCurso.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>CursoController/openSearchPage</from-outcome>
            <to-view-id>/cadastro/curso/manterCurso.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>ParametrosController/viewPage</from-outcome>
            <to-view-id>/cadastro/parametros/show.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>pt_BR</default-locale>
        </locale-config>
    
        <resource-bundle>
            <base-name>resources.messages</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
</faces-config>